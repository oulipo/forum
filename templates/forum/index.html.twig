{% extends 'base.html.twig' %}

{% block title %}liste des threads{% endblock %}

{% block body %}
<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Subject</th>
      <th scope="col">Author</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {% for thread in threads %}
    <tr class="table-secondary">
      <th scope="row">{{ thread.id }}</th>
      <td><a href="{{ path("liste-des-messages", {'id': thread.id }) }}">{{ thread.subject }}</a></td>
      <td>{{ thread.author }}</td>
      <td>{{ thread.createdAt | date("d/m/Y") }}</td>
    </tr>
    {% endfor %}
    
  </tbody>
</table> 
</div>
{% endblock %}
